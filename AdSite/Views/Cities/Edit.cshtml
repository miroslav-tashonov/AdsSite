@model AdSite.Models.CRUDModels.CityEditModel
@using AdSite.Views.Shared;
@{
    AdminNavPages.AddActivePage(ViewContext, AdminNavPages.Cities);
}
@await Html.PartialAsync("_AdminPartial")

<h2><localize name="City_Edit"></localize></h2>

<br />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"><localize name="City_Field_Name"></localize> </label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"><localize name="City_Field_Postcode"></localize></label>
                <input asp-for="Postcode" class="form-control" />
                <span asp-validation-for="Postcode" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <button type="submit" class="btn btn-default"><localize name="General_Save"></localize></button>
                <a asp-action="Index" class="btn btn-default"><localize name="General_BackToList"></localize></a>
            </div>
        </form>
    </div>
</div>

<div>

</div>

