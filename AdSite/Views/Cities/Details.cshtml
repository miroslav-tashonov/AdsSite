@model AdSite.Models.CRUDModels.CityViewModel
@using AdSite.Views.Shared;
@{
    AdminNavPages.AddActivePage(ViewContext, AdminNavPages.Cities);
}
@await Html.PartialAsync("_AdminNavigationPartial")
<div class="container">
    <div class="modal fade" tabindex="-1" id="loginModal"
         data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <a type="button" class="close" asp-action="Index">
                        ×
                    </a>
                    <h4 class="modal-title"><localize name="City_Details"></localize></h4>
                </div>
                <div class="modal-body">

                    <div class="center-block">
                        <dl class="dl-horizontal">
                            <dt>
                                <localize name="City_Field_Name"></localize>
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Name)
                            </dd>
                            <dt>
                                <localize name="City_Field_Postcode"></localize>
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Postcode)
                            </dd>
                        </dl>
                    </div>

                    <br />
                </div>
                <div class="modal-footer">
                    <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-default"><localize name="General_Edit"></localize></a> |
                    <a asp-action="Index" class="btn btn-default"><localize name="General_BackToList"></localize></a>
                </div>
            </div>
        </div>
    </div>
</div>