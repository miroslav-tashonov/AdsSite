@model AdSite.Models.CRUDModels.CityViewModel
@using AdSite.Views.Shared;
@{
    AdminNavPages.AddActivePage(ViewContext, AdminNavPages.Cities);
}
@await Html.PartialAsync("_AdminPartial")

<h3><localize name="General_DeleteMessage"></localize></h3>
<div>
    <h4><localize name="City_Entity"></localize></h4>
    <hr />

    <div class="center-block">
        <dl class="dl-horizontal">
            <dt>
                <localize name="City_Field_Name"></localize>
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                <localize name="City_Field_Postcode"></localize>
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Postcode)
            </dd>
        </dl>
    </div>

    <br />

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <button type="submit" value="Delete" class="btn btn-default"><localize name="General_Delete"></localize></button> |
        <a asp-action="Index" class="btn btn-default"><localize name="General_BackToList"></localize></a>
    </form>
</div>
