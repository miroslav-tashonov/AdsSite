<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="format-detection" content="telephone=no">
    <title>Ad Site</title>

    <link href="https://fonts.googleapis.com/css?family=PT+Serif:400,400i,700,700ii%7CRoboto:300,300i,400,400i,500,500i,700,700i,900,900i&amp;subset=cyrillic" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.min.css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/ion.rangeSlider.css">
    <link rel="stylesheet" href="~/css/ion.rangeSlider.skinFlat.css">
    <link rel="stylesheet" href="~/css/jquery.bxslider.css">
    <link rel="stylesheet" href="~/css/jquery.fancybox.css">
    <link rel="stylesheet" href="~/css/flexslider.css">
    <link rel="stylesheet" href="~/css/swiper.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/media.css">
    <link rel="stylesheet" href="~/lib/toastr.js/toastr.min.css">
    <link rel="stylesheet" href="~/lib/jstree/themes/default/style.min.css">

    <link rel="stylesheet" href="~/lib/bootstrap-select/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="~/lib/flag-icon-css/css/flag-icon.min.css">
    <script src="~/lib/jquery/jquery.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap-select/js/bootstrap-select.min.js" asp-append-version="true"></script>
    <script src="~/lib/toastr.js/toastr.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#facebookLink').attr("href", function () { return $('#webSettingFacebook').text().trim(); });
            $('#facebookFooterLink').attr("href", function () { return $('#webSettingFacebook').text().trim(); });
            $('#instagramLink').attr("href", function () { return $('#webSettingInstagram').text().trim(); });
            $('#instagramFooterLink').attr("href", function () { return $('#webSettingInstagram').text().trim(); });
            $('#vkLink').attr("href", function () { return $('#webSettingVK').text().trim(); });
            $('#vkFooterLink').attr("href", function () { return $('#webSettingVK').text().trim(); });
            $('#googlePlusLink').attr("href", function () { return $('#webSettingTwitter').text().trim(); });
            $('#googlePlusFooterLink').attr("href", function () { return $('#webSettingTwitter').text().trim(); });
            $('#twitterLink').attr("href", function () { return $('#webSettingGooglePlus').text().trim(); });
            $('#twitterFooterLink').attr("href", function () { return $('#webSettingGooglePlus').text().trim(); });
        });
    </script>

    @await Html.PartialAsync("_Alerts")

    <!-- jQuery plugins/scripts - start -->
    @RenderSection("Scripts", required: false)
    <!-- jQuery plugins/scripts - end -->

</head>
<body>

    <!-- Header - start -->
    <header class="header">

        <!-- Topbar - start -->
        <div class="header_top">
            <div class="container">
                <ul class="contactinfo nav nav-pills">
                    <li>
                        <i class='fa fa-phone'></i> <webSettings setting-name="Phone"></webSettings>
                    </li>
                    <li>
                        <i class="fa fa-envelope"></i> <webSettings setting-name="Email"></webSettings>
                    </li>
                </ul>
                <!-- Social links -->
                <div style="display:none">
                    <div id="webSettingFacebook">
                        <webSettings setting-name="facebook"></webSettings>
                    </div>
                    <div id="webSettingInstagram">
                        <webSettings setting-name="instagram"></webSettings>
                    </div>
                    <div id="webSettingVK">
                        <webSettings setting-name="vk"></webSettings>
                    </div>
                    <div id="webSettingTwitter">
                        <webSettings setting-name="twitter"></webSettings>
                    </div>
                    <div id="webSettingGooglePlus">
                        <webSettings setting-name="googleplus"></webSettings>
                    </div>
                </div>

                <ul class="social-icons nav navbar-nav">
                    <li>
                        <a href="" id="facebookLink" rel="nofollow" target="_blank">
                            <i class="fa fa-facebook"></i>
                        </a>
                    </li>
                    <li>
                        <a id="googlePlusLink" rel="nofollow" target="_blank">
                            <i class="fa fa-google-plus"></i>
                        </a>
                    </li>
                    <li>
                        <a id="twitterLink" rel="nofollow" target="_blank">
                            <i class="fa fa-twitter"></i>
                        </a>
                    </li>
                    <li>
                        <a id="vkLink" rel="nofollow" target="_blank">
                            <i class="fa fa-vk"></i>
                        </a>
                    </li>
                    <li>
                        <a id="instagramLink" rel="nofollow" target="_blank">
                            <i class="fa fa-instagram"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- Topbar - end -->
        <!-- Logo, Shop-menu - start -->
        <div class="header-middle">
            <div class="container header-middle-cont">
                <div class="toplogo">
                    <a asp-controller="Home" asp-action="Index">
                        <img src="~/img/logo-c.png">
                    </a>
                </div>
                <div class="shop-menu">
                    <ul>
                        @if (User.IsInRole("User"))
                        {
                            <li>
                                <a asp-action="Index"
                                   asp-controller="Wishlist">
                                    <i class="fa fa-heart"></i>
                                    <span class="shop-menu-ttl"><localize name="Wishlist_Name"></localize> </span>
                                    (<span id="topbar-favorites">1</span>)
                                </a>
                            </li>
                        }

                        <li>
                            @await Html.PartialAsync("_LoginPartial")
                        </li>

                        <li>
                            @await Html.PartialAsync("_SelectLanguagePartial")
                        </li>

                    </ul>
                </div>
            </div>
        </div>
        <!-- Logo, Shop-menu - end -->
        <!-- Topmenu - start -->
        <div class="header-bottom">
            <div class="container">
                <nav class="topmenu">

                    <!-- Catalog menu - start -->
                    <div class="topcatalog">
                        <a class="topcatalog-btn" href="catalog-list.html"><span><localize name="Ads_AllAds"></localize></span></a>
                        <ul class="topcatalog-list">
                            @await Component.InvokeAsync("CategoriesMenu", new { isFirstCall = true })
                        </ul>
                    </div>
                    <!-- Catalog menu - end -->
                    <!-- Main menu - start -->
                    <button type="button" class="mainmenu-btn">Menu</button>

                    <ul class="mainmenu">
                        @await Html.PartialAsync("_NavigationBar")
                    </ul>
                    <!-- Main menu - end -->
                    <!-- Search - start -->
                    <div class="topsearch">
                        <a id="topsearch-btn" class="topsearch-btn" href="#"><i class="fa fa-search"></i></a>
                        <form class="topsearch-form" action="#">
                            <input type="text" name="SearchString" placeholder="Search products"/>
                            <button asp-action="Index" asp-controller="Ads" type="submit"><i class="fa fa-search"></i></button>
                        </form>
                    </div>
                    <!-- Search - end -->
                </nav>
            </div>
        </div>
        <!-- Topmenu - end -->
    </header>
    <!-- Header - end -->
    <!-- Main Content - start -->
    <div class="container body-content">
        @RenderBody()
    </div>
    <!-- Main Content - end -->
    <!-- Footer - start -->
    <footer class="footer-wrap">
        <div class="container f-menu-list">
            <div class="row">
                <div class="f-menu">
                    <h3>
                        <localize name="Layouts_AboutUs"></localize>
                    </h3>
                    <ul class="nav nav-pills nav-stacked">
                        <li><a asp-action="Index" asp-controller="Home"><localize name="Layouts_Home"></localize></a></li>
                        <li><a asp-action="Index" asp-controller="Ads"><localize name="Layouts_Ads"></localize></a></li>
                        <li><a asp-action="Contact" asp-controller="Home"><localize name="Layouts_Contact"></localize></a></li>
                    </ul>
                </div>
                <div class="f-menu">
                    <h3>
                        <localize name="Layouts_Ads"></localize>
                    </h3>
                    <ul class="nav nav-pills nav-stacked">
                        <li><a asp-action="Index" asp-controller="Ads"><localize name="Layouts_Cars"></localize></a></li>
                        <li><a asp-action="Index" asp-controller="Ads"><localize name="Layouts_Houses"></localize></a></li>
                        <li><a asp-action="Index" asp-controller="Ads"><localize name="Layouts_Computers"></localize></a></li>
                    </ul>
                </div>
                <div class="f-menu">
                    <h3>
                        <localize name="Layouts_Information"></localize>
                    </h3>
                    <ul class="nav nav-pills nav-stacked">
                        <li><a asp-action="Contact" asp-controller="Home"><localize name="Layouts_Location"></localize></a></li>
                        <li><a asp-action="Contact" asp-controller="Home"><localize name="Layouts_Address"></localize></a></li>
                        <li><a asp-action="Contact" asp-controller="Home"><localize name="Layouts_Phone"></localize></a></li>
                    </ul>
                </div>
                <div class="f-menu">
                    <h3>
                        <localize name="Layouts_Pages"></localize>
                    </h3>
                    <ul class="nav nav-pills nav-stacked">
                        <li><a asp-action="Contact" asp-controller="Home"><localize name="Layouts_AboutUs"></localize></a></li>
                        <li><a asp-action="Contact" asp-controller="Home"><localize name="Layouts_Contact"></localize></a></li>
                        <li><a asp-action="Contact" asp-controller="Home"><localize name="Layouts_Map"></localize></a></li>
                    </ul>
                </div>
                <div class="f-subscribe">
                    <h3><localize name="Layouts_SubscribeMessage"></localize></h3>
                    <form class="f-subscribe-form" action="#">
                        <input placeholder="Your e-mail" type="text">
                        <button type="submit"><i class="fa fa-paper-plane"></i></button>
                    </form>
                    <p><localize name="Layouts_SubscribeEmailMessage"></localize></p>
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <div class="container">
                <div class="row">
                    <ul class="social-icons nav navbar-nav">
                        <li>
                            <a id="facebookFooterLink" rel="nofollow" target="_blank">
                                <i class="fa fa-facebook"></i>
                            </a>
                        </li>
                        <li>
                            <a id="googlePlusFooterLink" rel="nofollow" target="_blank">
                                <i class="fa fa-google-plus"></i>
                            </a>
                        </li>
                        <li>
                            <a id="twitterFooterLink" rel="nofollow" target="_blank">
                                <i class="fa fa-twitter"></i>
                            </a>
                        </li>
                        <li>
                            <a id="vkFooterLink" rel="nofollow" target="_blank">
                                <i class="fa fa-vk"></i>
                            </a>
                        </li>
                        <li>
                            <a id="instagramFooterLink" rel="nofollow" target="_blank">
                                <i class="fa fa-instagram"></i>
                            </a>
                        </li>
                    </ul>
                    <div class="footer-copyright">
                        <i><a href="">Tashonov</a></i> © Copyright
                    </div>
                </div>
            </div>
        </div>

    </footer>
    <!-- Footer - end -->

</body>
</html>