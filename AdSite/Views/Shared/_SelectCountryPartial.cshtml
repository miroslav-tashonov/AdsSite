@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Http.Features
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
@using AdSite.Models.CRUDModels
@using AdSite.Services


@section Scripts {
    <script src="~/lib/jquery/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap-select/js/bootstrap-select.min.js" asp-append-version="true"></script>
}

@inject ICountryService CountryService

@{
    var countryItems = CountryService.GetAll()
        .Select(c => new SelectListItem { Text = c.Name, Value = c.Path })
        .ToList();
}

<form>
    @Html.DropDownList("Countries", countryItems)
</form>