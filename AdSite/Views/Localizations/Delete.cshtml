@model AdSite.Models.CRUDModels.LocalizationViewModel

<h3><localize name="General_DeleteMessage"></localize></h3>
<div>
    <h4><localize name="Localization_Entity"></localize></h4>
    <hr />

    <hr />
    <dl class="dl-horizontal">
        <dt>
            <localize name="Localization_Fields_LocalizationKey"></localize>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LocalizationKey)
        </dd>
        <dt>
            <localize name="Localization_Fields_LocalizationValue"></localize>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LocalizationValue)
        </dd>
    </dl>

    <br />

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" value="Delete" class="btn btn-default"><localize name="General_Delete"></localize></button> |
        <a asp-action="Index" class="btn btn-default"><localize name="General_BackToList"></localize></a>
    </form>
</div>
