@model AdSite.Models.CRUDModels.LocalizationCreateModel
@using AdSite.Views.Shared;
@{
    AdminNavPages.AddActivePage(ViewContext, AdminNavPages.Localizations);
}

@await Html.PartialAsync("_AdminNavigationPartial")

<h2><localize name="Localization_CreateNew"></localize></h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"><localize name="Localization_Fields_LocalizationKey"></localize></label>
                <input asp-for="LocalizationKey" class="form-control" />
                <span asp-validation-for="LocalizationKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"><localize name="Localization_Fields_LocalizationValue"></localize></label>
                <input asp-for="LocalizationValue" class="form-control" />
                <span asp-validation-for="LocalizationValue" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label"><localize name="Language_Fields_LanguageName"></localize></label>
                <select asp-for="LanguageId"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.Languages,"Id", "Name"))"></select>

            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-default"><localize name="General_Create"></localize></button>
                <a asp-action="Index" class="btn btn-default"><localize name="General_BackToList"></localize></a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
