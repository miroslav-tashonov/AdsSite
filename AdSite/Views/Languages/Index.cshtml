@model IEnumerable<AdSite.Models.CRUDModels.LanguageViewModel>


<p>
    <a asp-action="Create"><localize name="Language_CreateNew"></localize></a>
</p>
<br/>
<br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CultureId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LanguageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LanguageShortName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CultureId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LanguageName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LanguageShortName)
                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@item.ID"  method="post" onsubmit="return confirm('Are you sure you want to delete?');">
                        <button type="submit" class="btn-link" >Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>