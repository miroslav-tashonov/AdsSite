@model IEnumerable<AdSite.Models.CRUDModels.CountryViewModel>
@using AdSite.Views.Shared;

@{
    AdminNavPages.AddActivePage(ViewContext, AdminNavPages.Countries);

    List<string> columnValues = new List<string> { Html.DisplayNameFor(model => model.Name), @Html.DisplayNameFor(model => model.Path) };
    List<SelectListItem> columnListItems = columnValues.ConvertAll(a =>
            {
                return new SelectListItem()
                {
                    Text = a.ToString(),
                    Value = a.ToString(),
                    Selected = ViewData["CurrentColumn"]?.ToString() == a.ToString()
                };
            });
}

@await Html.PartialAsync("_AdminNavigationPartial")

<p>
    <a asp-action="Create" class="btn btn-primary"><localize name="Country_CreateNew"></localize></a>
</p>

<br />

<form asp-action="Index" method="get">
    <div class="form-actions no-color row">
        <div class="col-sm-3">
            <div class="col-sm-4">
                <localize name="General_FindBy"></localize>
            </div>
            <div class="col-sm-8">
                <select name="ColumnName" class="form-control" asp-items="columnListItems"></select>
            </div>
        </div>

        <div class="col-sm-5">
            <div class="col-sm-10" style="padding-left:0px; padding-right:0px">
                <input type="text" name="SearchString" value="@ViewData["currentFilter"]" class="form-control" />
            </div>
            <div class="col-sm-2" style="padding-left:0px; padding-right:0px">
                <button type="submit" class="form-control"> <i class="fa fa-search"></i> </button>
            </div>
        </div>
    </div>
</form>

<br />

<table class="table">
    <thead>
        <tr>
            <th>
                <localize name="Country_Field_Name"></localize>
            </th>
            <th>
                <localize name="Country_Field_Path"></localize>
            </th>
            <th>
                <localize name="Country_Field_Abbreviation"></localize>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Path)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abbreviation)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID" class="btn-link"><localize name="General_Edit"></localize></a> |
                <a asp-action="Details" asp-route-id="@item.ID" class="btn-link"><localize name="General_Details"></localize></a> |
                <a asp-action="Delete" asp-route-id="@item.ID" class="btn-link"><localize name="General_Delete"></localize></a>
            </td>
        </tr>
        }
    </tbody>
</table>
<br />