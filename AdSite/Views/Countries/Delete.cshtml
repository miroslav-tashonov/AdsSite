@model AdSite.Models.CRUDModels.CountryViewModel
@using AdSite.Views.Shared;
@{
    AdminNavPages.AddActivePage(ViewContext, AdminNavPages.Countries);
}
@await Html.PartialAsync("_AdminNavigationPartial")

<div class="container">
    <div class="modal fade" tabindex="-1" id="loginModal"
         data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <a type="button" class="close" asp-action="Index">
                        ×
                    </a>
                    <h4 class="modal-title"><localize name="General_DeleteMessage"></localize></h4>
                </div>
                <div class="modal-body">
                    <div>
                        <div class="center-block">
                            <dl class="dl-horizontal">
                                <dt>
                                    <localize name="Country_Field_Name"></localize>
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Name)
                                </dd>
                                <dt>
                                    <localize name="Country_Field_Path"></localize>
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Path)
                                </dd>
                                <dt>
                                    <localize name="Country_Field_Abbreviation"></localize>
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Abbreviation)
                                </dd>
                            </dl>
                        </div>

                        <br />


                    </div>
                </div>
                <div class="modal-footer">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ID" />
                        <button type="submit" value="Delete" class="btn btn-default"><localize name="General_Delete"></localize></button> |
                        <a asp-action="Index" class="btn btn-default"><localize name="General_BackToList"></localize></a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>