@model AdSite.Models.CRUDModels.AdCreateModel
@using AdSite.Views.Shared;
@{
    UsersNavPages.AddActivePage(ViewContext, UsersNavPages.NewAd);
}
@await Html.PartialAsync("_UsersNavigationPartial")


<h2><localize name="Ad_CreateNew"></localize></h2>

<br />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"><localize name="Ad_Field_Name"></localize></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label"><localize name="Ad_Field_Description"></localize></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label"><localize name="Ad_Field_Price"></localize></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label"><localize name="Ad_Fields_City"></localize></label>
                <select asp-for="CityId"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.Cities,"Id", "Name"))"></select>

            </div>

            <div class="form-group">
                <label class="control-label"><localize name="Ad_Fields_Category"></localize></label>
                <select asp-for="CategoryId"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.Categories,"Id", "Name"))"></select>

            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <p><localize name="Ad_Fields_Upload"></localize></p>
                    <input type="file" name="files" multiple />
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-default"><localize name="General_Create"></localize></button>
                <a asp-action="Index" class="btn btn-default"><localize name="General_BackToList"></localize></a>
            </div>
        </form>
    </div>
</div>

