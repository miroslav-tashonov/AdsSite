@model AdSite.Models.CRUDModels.AdEditModel
@using AdSite.Views.Shared;

<h2><localize name="Ad_Edit"></localize></h2>

<br />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"><localize name="Ad_Field_Name"></localize> </label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label"><localize name="Ad_Field_Price"></localize></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label"><localize name="Ad_Fields_City"></localize></label>
                <select asp-for="CityId"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.Cities,"Id", "Name"))"></select>

            </div>

            <div class="form-group">
                <label class="control-label"><localize name="Ad_Fields_Category"></localize></label>
                <select asp-for="CategoryId"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.Categories,"Id", "Name"))"></select>

            </div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <button type="submit" class="btn btn-default"><localize name="General_Save"></localize></button>
                <a asp-action="Index" class="btn btn-default"><localize name="General_BackToList"></localize></a>
            </div>
        </form>
    </div>
</div>

<div>

</div>

