@model IEnumerable<ApplicationUser>
@using AdSite.Views.Shared;

@{
    AdminNavPages.AddActivePage(ViewContext, AdminNavPages.ManageUsers);

    string username = @Html.DisplayNameFor(model => model.UserName);
    string selectedUsername = ViewData["CurrentColumn"]?.ToString() == username ?
        "<option selected>" + username + "</option>" :
        "<option>" + username + "</option>";

    string email = @Html.DisplayNameFor(model => model.Email);
    string selectedEmail = ViewData["CurrentColumn"]?.ToString() == email ?
        "<option selected>" + email + "</option>" :
        "<option>" + email + "</option>";
}

@await Html.PartialAsync("_AdminNavigationPartial")

<p>
    <a class="btn btn-primary" asp-action="Register" asp-controller="Account"><localize name="Account_CreateNew"></localize></a>
</p>

<br />

<form asp-action="Index" method="get">
    <div class="form-actions no-color row">
        <div class="col-sm-3">
            <div class="col-sm-4">
                <localize name="General_FindBy"></localize>
            </div>
            <div class="col-sm-8">
                <select name="ColumnName" class="form-control">
                    @Html.Raw(selectedUsername)
                    @Html.Raw(selectedEmail)
                </select>
            </div>
        </div>

        <div class="col-sm-5">
            <div class="col-sm-10" style="padding-left:0px; padding-right:0px">
                <input type="text" name="SearchString" value="@ViewData["currentFilter"]" class="form-control" />
            </div>
            <div class="col-sm-2" style="padding-left:0px; padding-right:0px">
                <button type="submit" class="form-control"> <i class="fa fa-search"></i> </button>
            </div>
        </div>
    </div>
</form>

<br />


<table class="table">
    <thead>
        <tr>
            <th>
                <localize name="Account_Fields_Username"></localize>
            </th>
            <th>
                <localize name="Account_Fields_Email"></localize>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="ChangeRole" asp-route-id="@item.Id" class="btn-link"><localize name="Account_ChangeRole"></localize></a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn-link"><localize name="General_Delete"></localize></a>
            </td>
        </tr>
}
    </tbody>
</table>
