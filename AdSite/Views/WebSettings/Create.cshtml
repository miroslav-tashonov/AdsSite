@model AdSite.Models.CRUDModels.WebSettingsCreateModel
@using AdSite.Views.Shared;
@{
    AdminNavPages.AddActivePage(ViewContext, AdminNavPages.WebSettings);
}

@await Html.PartialAsync("_AdminNavigationPartial")
<div class="container">
    <div class="modal fade" tabindex="-1" id="loginModal"
         data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <a type="button" class="close" asp-controller="Home" asp-action="Index">
                        ×
                    </a>
                    <h4 class="modal-title"><localize name="WebSettings_CreateNew"></localize></h4>
                </div>
                <form asp-action="Create">
                    <div class="modal-body">
                        <div asp-validation-summary="m" class="text-danger"></div>
                        <div class="form-group">
                            <label class="control-label"><localize name="WebSettings_Fields_Phone"></localize></label>
                            <input asp-for="p" class="form-control" />
                            <span asp-validation-for="p" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label"><localize name="WebSettings_Fields_Email"></localize></label>
                            <input asp-for="E" class="form-control" />
                            <span asp-validation-for="E" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label"><localize name="WebSettings_Fields_FacebookSocialLink"></localize></label>
                            <input asp-for="F" class="form-control" />
                            <span asp-validation-for="F" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label"><localize name="WebSettings_Fields_InstagramSocialLink"></localize></label>
                            <input asp-for="i" class="form-control" />
                            <span asp-validation-for="i" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label"><localize name="WebSettings_Fields_TwitterSocialLink"></localize></label>
                            <input asp-for="odelExpressionPro" class="form-control" />
                            <span asp-validation-for="odelExpressionPro" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label"><localize name="WebSettings_Fields_GooglePlusSocialLink"></localize></label>
                            <input asp-for="odelExpressionProvid" class="form-control" />
                            <span asp-validation-for="odelExpressionProvid" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label"><localize name="WebSettings_Fields_VKSocialLink"></localize></label>
                            <input asp-for="v" class="form-control" />
                            <span asp-validation-for="v" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-default"><localize name="General_Create"></localize></button>
                        <a asp-action="Index" asp-controller="Home" class="btn btn-default"><localize name="General_BackToHomepage"></localize></a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>