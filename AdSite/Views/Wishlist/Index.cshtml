@model IEnumerable<AdSite.Models.CRUDModels.WishlistViewModel>
@using AdSite.Views.Shared;

@{
    AdminNavPages.AddActivePage(ViewContext, UsersNavPages.MyWishlist);
}

@await Html.PartialAsync("_UsersNavigationPartial")

<br />
<section class="container">
    <div class="section-cont section-full">
        <div class="prod-items section-items">
            @foreach (var item in Model)
            {
                <div class="prod-i">
                    <div class="prod-i-top">
                        <a asp-action="Details" asp-controller="Ads" asp-route-id="@item.Ad.ID" class="prod-i-img"><!-- NO SPACE --><img src='data:image;base64,@System.Convert.ToBase64String(item.Ad.MainPicture)' /><!-- NO SPACE --></a>
                        <p class="prod-i-info">
                            <a asp-action="Delete" asp-route-id="@item.Ad.ID" class="prod-i-favorites center-favorites"><span><localize name="Wishlist_RemoveMessage"></localize></span><i class="fa fa-remove"></i></a>
                        </p>
                    </div>
                    <h3>
                        <a asp-action="Details" asp-controller="Ads" asp-route-id="@item.Ad.ID">@item.Ad.Name</a>
                    </h3>
                    <p class="prod-i-price">
                        <b>@item.Ad.Price</b>
                    </p>
                </div>
            }
        </div>
    </div>
</section>

<br />
